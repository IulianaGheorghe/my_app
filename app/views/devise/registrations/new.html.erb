<!-- Section: Design Block -->
  <section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
          background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
          height: 300px;
          "></div>
    <!-- Background image -->
    <div class="col-md-6", style="left: 25%;">
      <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -150px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
        <div class="card-body py-5 px-md-5">
          <div class="row d-flex justify-content-center">
            <div class="col-lg-8">
              <h2 class="fw-bold mb-5">Sign up now</h2>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "form3Example3"%>
                  <%= f.label :email, class: "form-label", for:"form3Example3" %><br />
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                  <%= f.password_field :password, autocomplete: "new-password", type: "password", id: "form3Example4", class: "form-control"%>
                  <%= f.label :password, class: "form-label", for: "form3Example4" %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                </div>

                <!-- Reset Password input -->
                <div class="form-outline mb-4">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", type: "password", id: "form3Example4", class: "form-control"%>
                  <%= f.label :password_confirmation, class: "form-label", for: "form3Example4" %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                </div>

                <!-- Submit button -->
                <div class="actions", style="padding-top: 10px;">
                  <%= f.submit "Sign up", type:"submit", class:"btn btn-info btn-block mb-4" %>
                </div>
              <%end%>
            </div>
          </div>
        </div>
    </div>
  </div>
  </section>
<!-- Section: Design Block -->
<%= render "devise/shared/links" %>
