<p style="color: green"><%= notice %></p>

<%= render @category %>

<div class="card text-center border-info mb-3", style="width: 45rem; margin: auto; margin-top: 10%;">
  <div class="card-header">
    <%= @category.name %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= @category.description %></p>
    <div class="card-body", style="display: flex; justify-content: space-between; margin-top: 10px;">
      <%= link_to 'Back to categories', categories_path, class: "btn btn-warning" %>
      <%= button_to "Destroy this product", @category, method: :delete, class: "btn btn-danger" %>
      <%= link_to 'Edit this category', edit_category_path(@category), class: "btn btn-info" %>
    </div>
  </div>
</div>