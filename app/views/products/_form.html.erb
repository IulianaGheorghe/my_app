<%= form_for(@product) do |f| %>
  <div class="form-outline mb-4">
    <%= f.text_field :name, autofocus: true, required: true, class: "form-control", placeholder: "Name", id: "text-field"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.select(:type, ['Eau de parfum', 'Eau de toilette'], {:include_blank => "Select type:"} , {:required => true, :class => "form-control", :id => "text-field"}) %>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.text_area :description, required: true, class: "form-control", placeholder: "Description", id: "text-field"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.text_field :notes, autofocus: true, required: true, class: "form-control", placeholder: "Olfactory notes", id: "text-field"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.text_field :sku, required: true, class: "form-control", placeholder: "SKU", id: "text-field"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.number_field :stock, min: 0, required: true, class: "form-control", placeholder: "Stock", id: "text-field"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.number_field :price, min: 0, step: 0.01, required: true, class: "form-control", placeholder: "Price", id: "text-field"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.number_field :quantity, min: 0, step: 10, required: true, class: "form-control", placeholder: "Quantity in ml", id: "text-field"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.collection_select(:category_id, Category.all, :id, :name, {:include_blank => "Select category:"} , {:required => true, :class => "form-control", :id => "text-field"}) %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit button_text, class: "btn btn-info btn-block mb-4" %>
  </div>
<% end %>